#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void full_elements(int *array, int n) {
    for (int i = 0; i < n; i++) {
        array[i] = rand() % 100; // Генерация случайного числа от 0 до 99
    }
}

int main() {
    int N;
    
    // Инициализация генератора случайных чисел
    srand(time(NULL));

    // Запрос у пользователя количества элементов
    printf("Введите количество элементов для генерации: ");
    scanf("%d", &N);

    // Проверка на положительное количество элементов
    if (N <= 0) {
        printf("Количество элементов должно быть положительным.\n");
        return 1;
    }

    // Создание массива для хранения элементов
    int *array = (int *)malloc(N * sizeof(int));
    if (array == NULL) {
        printf("Ошибка выделения памяти.\n");
        return 1;
    }

    // Заполнение массива случайными элементами
    full_elements(array, N);

    // Запись элементов в файл
    FILE *file = fopen("elements.txt", "w");
    if (file == NULL) {
        printf("Ошибка при открытии файла.\n");
        free(array);
        return 1;
    }

    for (int i = 0; i < N; i++) {
        fprintf(file, "%d\n", array[i]);
    }

    fclose(file); // Закрытие файла
    free(array);  // Освобождение памяти

    printf("Случайные элементы записаны в файл elements.txt\n");

    return 0;
}