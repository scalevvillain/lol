#include <stdio.h>

int main() {
    char operator;
    double num1, num2, result;

    // Запрос ввода
    printf("Введите первое число: ");
    scanf("%lf", &num1);
    
    printf("Введите оператор (+, -, *, /): ");
    scanf(" %c", &operator); 

    printf("Введите второе число: ");
    scanf("%lf", &num2);

    
    switch (operator) {
        case '+':
            result = num1 + num2;
            printf("%.2lf + %.2lf = %.2lf\n", num1, num2, result);
            break;
        case '-':
            result = num1 - num2;
            printf("%.2lf - %.2lf = %.2lf\n", num1, num2, result);
            break;
        case '*':
            result = num1 * num2;
            printf("%.2lf * %.2lf = %.2lf\n", num1, num2, result);
            break;
        case '/':
            if (num2 != 0) {
                result = num1 / num2;
                printf("%.2lf / %.2lf = %.2lf\n", num1, num2, result);
            } else {
                printf("Ошибка: Деление на ноль!\n");
            }
            break;
        default:
            printf("Ошибка: Неправильный оператор!\n");
            break;
    }

    return 0;
}
