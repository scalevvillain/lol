#include <stdio.h>
#include <locale.h>


int main() {
    setlocale(LC_ALL, "RUS");
    int n;
    char symbol1, symbol2;
    char option;

    printf("Введите количество печатаемых символов: ");
    scanf("%d", &n);

    printf("Введите первый символ: ");
    scanf(" %c", &symbol1);
    printf("Хотите ввести второй символ? (y/n): ");
    scanf(" %c", &option);

    if (option == 'y') {
        printf("Введите второй символ: ");
        scanf(" %c", &symbol2);
    }
    printf("Выберите опцию:\n");
    printf("1) Напечатать '+' в начале и/или в конце\n");
    printf("2) Полстроки одним символом, другую половину другим\n");
    printf("3) Печатать после каждого символа восклицательный знак\n");
    int choice;
    printf("Введите номер опции: ");
    scanf("%d", &choice);

    if (choice == 1) {
        printf("+");
        for (int i = 0; i < n; i++) {
            printf("%c", symbol1);
        }
        printf("+");
    }
    else if (choice == 2) {
        for (int i = 0; i < n / 2; i++) {
            printf("%c", symbol1);
        }
        for (int i = n / 2; i < n; i++) {
            printf("%c", symbol2);
        }
        printf("\n");
    }
    else if (choice == 3) {
        for (int i = 0; i < n; i++) {
            printf("%c!", symbol1);
        }
    }
    else {
        printf("Неверный выбор.n");
    }

    return 0;
}
