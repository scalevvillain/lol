#include <stdio.h>
#include <locale.h>

int main() {
    setlocale(LC_CTYPE, "RUS");
    getchar();
    task1();
    getchar();
    task2();
    getchar();

}
int task1() {
    int a;
    printf("Введите сегодняшнее число:");
    scanf_s("%d", &a);
    printf("\033[31m");
    printf("\n");
    printf("\n");
    printf("----------------------------------------------------------------------");
    printf("\n");

}
